<h1>Listing sales</h1>

<table class="table">
  <thead>
    <tr>
      <th>Product</th>
      <th>Quantity</th>
      <th>Selling price</th>
      <th>Total</th>
      <th>Date</th>
      <th>Reseller</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @sales.each do |sale| %>
      <tr>
        <td><%= sale.product.name %></td>
        <td><%= sale.quantity %></td>
        <td><%= sale.selling_price %></td>
        <td><%= sale.total %></td>
        <td><%= sale.date %></td>
        <td><%= sale.Type %></td>
        <td><%= link_to 'Show', sale %></td>
        <td><%= link_to 'Edit', edit_sale_path(sale) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Sale', new_sale_path, class: 'btn'%>
